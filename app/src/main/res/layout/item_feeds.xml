<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/_5sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivFeedsUserIMage"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/userimage" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/ivFeedsUserIMage"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WTFSPORTS"
                android:layout_marginTop="2dp"
                android:gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_gravity="top"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hr"
                android:layout_marginTop="2dp"
                android:gravity="start"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="top"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/menu_dot"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:contentDescription="comment" />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Catch him live and exclsive on WTFSports"
        android:layout_margin="2dp"
        android:paddingStart="10dp"
        android:id="@+id/tvFeedDetails"
        android:layout_gravity="center_horizontal"
        android:gravity="top"
        android:maxLines="5"
        android:textColor="@color/black"
        android:paddingEnd="10dp"
        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="20dp"
        android:id="@+id/ivFeedsImage"
        android:src="@drawable/rcb"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/like_userfeedspage"
            android:layout_marginStart="@dimen/_5sdp"
            android:padding="@dimen/_2sdp"
            android:contentDescription="like"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/comment_userfeedspage"
            android:padding="@dimen/_2sdp"
            android:layout_gravity="center"
            android:contentDescription="comment" />

        <TextView
            android:id="@+id/tvLikeCommentCountNo"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:text="201"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_5sdp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="14sp" />

    </LinearLayout>

    <View android:id="@+id/separator"
        android:background="@color/black"
        android:layout_width = "fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/tvLike"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:drawableStart="@drawable/drawable_like"
            android:drawablePadding="5dp"
            android:gravity="start|center_vertical"
            android:text="Like"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvComment"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/drawable_comment"
            android:drawablePadding="5dp"
            android:gravity="start|center_vertical"
            android:text="Comment"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvShare"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/drawable_share"
            android:drawableTint="@color/colorAccent"
            android:drawablePadding="5dp"
            android:gravity="start|center_vertical"
            android:text="Share"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
