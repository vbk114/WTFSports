<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:actionBarStyle">@style/AppTheme.MyActionBar</item>
        <item name="android:actionMenuTextAppearance">@style/AppTheme.MyActionBar.MenuTextStyle
        </item>
        <item name="android:actionMenuTextColor">@color/color_fac4b3</item>
        <item name="android:searchIcon">@drawable/search</item>
        <item name="android:searchViewStyle">@style/SearchViewStyle</item>
        <item name="actionMenuTextColor">@color/grey_light</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.Menu" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:actionBarStyle">@style/AppTheme.MyActionBar</item>
        <item name="android:actionMenuTextAppearance">@style/AppTheme.MyActionBar.MenuTextStyle
        </item>
        <item name="android:actionMenuTextColor">@color/color_fac4b3</item>
        <item name="android:searchIcon">@drawable/search</item>
        <item name="android:searchViewStyle">@style/SearchViewStyle</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppTheme.MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.MyActionBar.TitleTextStyle</item>
        <item name="android:actionMenuTextAppearance">@style/AppTheme.MyActionBar.MenuTextStyle
        </item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.MyActionBar.TitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.MyActionBar.TitleTextStyle.Large" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/AppTheme.TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="AppTheme.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/drawer_menu_item_selected_background</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.MyActionBar.MenuTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">#66dd99</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:actionMenuTextColor">@color/grey_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:homeAsUpIndicator">@drawable/arrow</item>/>
        <item name="android:titleTextStyle">@style/AppTheme.MyActionBar.TitleTextStyle</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:homeAsUpIndicator">@drawable/arrow</item>/>
        <item name="android:actionMenuTextColor">@color/grey_light</item>
    </style>


